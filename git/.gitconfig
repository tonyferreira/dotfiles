[core]
	autocrlf = input
	editor   = code-insiders
[status]
	m = merge --no-ff
[diff]
	tool = bc
[difftool "bc"]
	trustExitCode = true
[difftool]
	prompt = false
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
[alias]
	# lg = "!source ~/.githelpers && pretty_git_log"
	conflicts = diff --name-only --diff-filter=U
	latest-all = for-each-ref --sort=committerdate --format='%(refname:short)'
	latest = for-each-ref --sort=committerdate --format='%(refname:short)' refs/heads
	latestv = for-each-ref --sort=committerdate --format='%(refname:short)'
	last = log -1 HEAD
	tags = tag --list
	unstage = reset HEAD --
	ustats = shortlog -s -n --all
	st = status
	lg = log --pretty=format:'%Cred%ad%x09%Cblue%an%x09%x09%C(yellow)%h%x09%Creset%<(75,trunc)%s' --date=short
	fa = fetch --all --prune
	p = pull origin development --no-edit
	diffq = diff origin/development --name-status
 	diffc = diff --cached
  	amend = commit --amend
	comp = difftool --dir-diff
	ac = !git add -A && git commit -m
	br = !sh -c 'git branch --all | less'
	bq = !sh -c 'clear && git branch | sed /\\*/d | less'
	rmo = !sh -c 'git latest | sed -n $1p | xargs git branch -D'
	conf ="!f() { cat ~/.gitconfig; }; f"